# Environment-specific configuration for production
# This file contains variables that are specific to the production environment

# Project Configuration
PROD_PROJECT_ID=production-adk
ENVIRONMENT=production
REGION=us-central1

# Cloud Run Configuration
SERVICE_NAME=my-agentic-rag
MEMORY=2Gi
CPU=2
MAX_INSTANCES=100
MIN_INSTANCES=1
CONCURRENCY=80

# Discovery Engine Configuration
DATA_STORE_ID=my-agentic-rag-datastore-prod
DATA_STORE_REGION=us

# Data Pipeline Configuration
PIPELINE_ROOT=gs://production-adk-my-agentic-rag-rag
PIPELINE_SA_EMAIL=my-agentic-rag-rag@production-adk.iam.gserviceaccount.com
PIPELINE_NAME=data-ingestion-pipeline
PIPELINE_CRON_SCHEDULE=""  # Disable automatic cron in production
DISABLE_CACHING=TRUE

# Container Registry Configuration
ARTIFACT_REGISTRY_REPO=my-agentic-rag-docker-repo
CONTAINER_NAME=my-agentic-rag

# Logging Configuration
LOGS_BUCKET=gs://production-adk-my-agentic-rag-logs-data/build-logs

# Security Configuration
ALLOW_UNAUTHENTICATED=true
IAP_ENABLED=false

# Monitoring Configuration
ENABLE_TRACING=true
ENABLE_LOGGING=true
LOG_LEVEL=WARNING

# Production-specific settings
HEALTH_CHECK_TIMEOUT=30
SMOKE_TEST_TIMEOUT=60
DEPLOYMENT_TIMEOUT=1200  # 20 minutes

# Rollback Configuration
ENABLE_ROLLBACK=true
ROLLBACK_TIMEOUT=300  # 5 minutes